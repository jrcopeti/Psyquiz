<h1>Welcome, <%= current_user.name %></h1>
<br>
<%= link_to "Go to Quizzes", quizzes_path, class: "mb-3 btn btn-primary btn-lg" %>



  <div class= "card mb-4">
    <div class= "card-title m-5">
      <div class="card-text">
  <br>
      <h4>Your daily goals - updated every 5 minutes</h4>
      <% @goals.each do |goal| %>
        <div>
          <strong><%= goal.title %></strong>
          <p><%= goal.description %></p>
        </div>
      <% end %>
      </div>
    </div>
  </div>


<br>

<% if current_user.admin? %>
<div class= "mb-3">
    <div>
      <%= link_to 'Track User Quizzes', track_users_quizzes_path, class: "btn btn-secondary" %>
    </div>
    <br>
    <div>
      <%= link_to 'Create new Quiz', new_quiz_path, class: "btn btn-info" %>
    </div>
    <br>
    <div>
      <%= link_to 'Create new Goal', new_goal_path, class: "btn btn-success" %>
    </div>
      <br>
    <div>
      <%= link_to 'See all Goals', goals_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
